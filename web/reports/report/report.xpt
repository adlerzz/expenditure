<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly report</title>
    <link rel="stylesheet" type="text/css" href="/reports/report/report.css">
    <script type="module">

        import {putData} from "../../scripts/databus.js";

        putData('brief', {% autoescape false %}{{brief}}{% endautoescape %});
        putData('tab', '{{tab}}');
        //# sourceURL=report.inline.js
    </script>
</head>
<body>
<div id="main">
    <div class="content">

        <div class="pad">
            <div class="button button-outcomes active">
                <span>Расходы</span>
            </div>
            <div class="button button-incomes">
                <span>Доходы</span>
            </div>
            <div class="button button-brief">
                <span>Сводка</span>
            </div>
        </div>

        <div class="button button-toggle-colexp" >
            <span>Свернуть</span>
        </div>
        {% for tab in tabs %}

            <div class="{{tab.class}} categories">

            {% for category in tab.data %}
                <div class="category">
                    <div class="name">
                        <span>{{category.name}}</span>
                    </div>
                    <div class="articles">
                        {% for article in category.children %}
                            <div class="name">
                                <span>{{article.name}}</span>
                            </div>
                            <div class="value">
                                <span>{{article.value}}</span>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="value">
                        <span class="label">Итого по категории: </span><span>{{category.value}}</span>
                    </div>
                </div>

            {% endfor %}
            </div>
        {% endfor %}

        <div class="brief">
            <canvas id="brief-canvas"></canvas>
        </div>

    </div>
</div>
<script src="/reports/report/report.js" type="module"></script>
</body>
</html>
