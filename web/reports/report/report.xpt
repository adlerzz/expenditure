<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly report</title>
    <link rel="stylesheet" type="text/css" href="/reports/report/report.css">
    <script src="/scripts/databus.js"></script>
    <script>
        putData('brief', {% autoescape false %}{{brief}}{% endautoescape %});
        putData('tab', '{{tab}}');
    </script>
</head>
<body>
<div id="main">
    <div class="content">

        <div class="pad">
            <div class="button button-outcomes active" onclick="showOutcomes()">
                <span>Расходы</span>
            </div>
            <div class="button button-incomes" onclick="showIncomes()">
                <span>Доходы</span>
            </div>
            <div class="button button-brief" onclick="showBrief()">
                <span>Brief</span>
            </div>
        </div>

        <div class="button button-toggle-colexp" onclick="toggleColExp()">
            <span>toggle</span>
        </div>
        {% for tab in tabs %}

            <div class="{{tab.class}} categories">


            {% for category in tab.data %}
                <div class="category">
                    <div class="name">
                        <span>{{category.name}}</span>
                    </div>
                    <div class="articles">
                        {% for article in category.children %}
                            <div class="name">
                                <span>{{article.name}}</span>
                            </div>
                            <div class="value">
                                <span>{{article.value}}</span>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="value">
                        <span class="label">Итого по категории: </span><span>{{category.value}}</span>
                    </div>
                </div>

            {% endfor %}
            </div>
        {% endfor %}

        <div class="brief">
            <canvas id="brief-canvas"></canvas>
        </div>

    </div>
</div>
<script src="/scripts/draw.js"></script>
<script src="/scripts/behavior.js"></script>
<script src="/reports/report/report.js"></script>
</body>
</html>
